<!DOCTYPE html>
<html>
    <head>

        <meta charset="utf-8" />

        <!-- Set the viewport width to device width for mobile -->
        <meta name="viewport" content="width=device-width" />

        <title>{% block title %}Blog sio{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/stylesheets/foundation.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('css/stylesheets/normalize.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('css/stylesheets/app.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('css/stylesheets/foundation.min.css') }}" type="text/css" />
        {% endblock %}
            
        {% block javascripts %}
            <script src="{{ asset('css/javascripts/vendor/jquery.js') }}" type="text/javascript"></script>
            <script src="{{ asset('css/javascripts/vendor/zepto.js') }}" type="text/javascript"></script>
            <script src="{{ asset('css/javascripts/foundation/foundation.js') }}" type="text/javascript"></script>
            <script src="{{ asset('css/javascripts/foundation/foundation.magellan.js') }}" type="text/javascript"></script>

        {% endblock %}

    </head>

    <body>

        <!-- Header and Nav -->
        
        
        
            
        {% block logo %} 
        <div class="row head">
            <div class="large-3 columns">
                <a href="{{ path('homepage')}}"><img src="{{ asset('css/images/accueil/logo.png') }}" alt="Symfony!" /></a>
            </div>
           
        {% endblock %}



        {% block navbar %} 
            <div class="large-9 columns">
                <ul class="button-group right">
                    <li><a href="{{ path('homepage')}}" class="button">Accueil</a></li>
                    <li><a href="{{ path('sonata_news_home') }}" class="button">Blog</a></li>
                    <li><a href="{{ path('tperroin_projets')}}" class="button">Projets</a></li>
                    <li><a href="{{ path('sonata_admin_dashboard')}}" class="button">Administration</a></li>
                </ul>
            </div>
        </div>
        {% endblock %}
        <!-- End Header and Nav -->

        <!-- First Band (Image) -->
        {% block image_accueil %}
            <div class="row">
                <div class="large-12 columns">
                    <img src="{{ asset('css/images/accueil/image_accueil.jpg') }}" alt=""/>
                    <br></br>
                </div>
            </div>
        {% endblock %}

        {% block navprojets %}{% endblock %}
        
        {% block corps %}{% endblock %}

        <script>
  document.write('<script src="http://foundation.zurb.com/docs/assets/vendor/'
        + ('__proto__' in {} ? 'zepto' : 'jquery')
        + '.js"><\/script>');
</script>
<script>
      $(document).foundation();
      // For Kitchen Sink Page
      $('#start-jr').on('click', function() {
        $(document).foundation('joyride','start');
      });
    </script>
    </body>

    <footer class="row">
        <div class="large-12 columns">
            <hr />
            <div class="row">
                <div class="large-6 columns">
                    <p>&copy; Copyright Perroin Thibault</p>
                </div>
                <div class="large-6 columns">
                    <ul class="link-list right">
                        <li><a href="http://tpdoc.tpdev.fr/">tpdoc</a></li>
                    </ul>
                </div>
            </div>
        </div> 
    </footer>

    
</html>